//Resets
ks-box-sizing-reset()
ks-normalize()
//Settings/Plugins
ks-no-conflict = true
@import "kouto-swiss"
@import 'lost';
//Lost Settings
$flexbox = true;
$gutter = 30px
$rtl = false
@import 'rupture';
@import 'typographic';
//Base
@import '_base/*'
//Mixins
@import '_base/mixins/*'
//Generated Icons
@import '_generated/*'

//Defualt bg
body
  background: $bg
  transition: background 1s ease-in-out
  +below(700px)
    transition: background 1s ease-in-out
    background: alpha(lighten($sc-spc[1], 70%), 0.75)

//code styl
code
  padding: 0
  padding-top: 0.2em
  padding-bottom: 0.2em
  margin: 0
  font-size: 85%
  background-color: rgba(0,0,0,0.04)
  border-radius: 3px
  
 @font-face
   font-family cunt
   font-style normal
   src url(fonts/OpenSans-Regular-webfont.woff2)