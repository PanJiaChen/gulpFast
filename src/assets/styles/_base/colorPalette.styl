//--------------------------//
//Mixin
//-------------------------//
$colorLightness(val = 50%, _color = #eee)
  //Check for unit
  if unit(val) == ''
    //No unit
    if val <= 10
      _valPercent = val  * 10;
      val = unit(_valPercent, '%');
      return lightness(_color, val)
    else
      warn('Your gray-ness value must be under ten or a precent value.')
  else
    return lightness(_color, val)


