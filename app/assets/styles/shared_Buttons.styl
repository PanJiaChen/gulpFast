brackets = createButtronClass('brackets',{
  text-decoration: none
  text-transform: uppercase
  letter-spacing: 1px
  font-weight: 400
  text-shadow: "0 0 1px rgba(255,255,255,0.3)"
  font-size: 1.35em
  background: transparent
  color: #7F8C8D
  component:{
    span:{
      //Pseudo Elms
      before:{
        content: "'['"
        position: absolute
        left: 10%
        top: -3px
        opacity: 0
        margin-right: 10px
        font-size: 1.4em
        transition: {
          options:{
            shorthand: _bracketsFadeOut
          }
        }
        hover:{
          transform: translateX(-20px)
          opacity: 1
          options:{
            shorthand: _bracketsFadeIn
          }
        }
      }
      after:{
        content: "']'"
        position: absolute
        right: 10%
        top: -3px
        opacity: 0
        margin-left: 10px
        font-size: 1.4em
        transition: {
          options:{
            shorthand: _bracketsFadeOut
          }
        }
        hover:{
          transform: translateX(20px)
          opacity: 1
          options:{
            shorthand: _bracketsFadeIn
          }
        }
      }
    }
  }
})


