_flipBg = #3498DB;
flip = createButtronClass('flip',{
  perspective: 1000px
  background: _flipBg
  component:{
    span:{
      width: 100%
      height: 100%
      position: relative
      display: inline-block
      transform-origin: "50% 0"
      transform-style: preserve-3d
      width: 100%
      hover:{
        transform: rotateX(90deg) translateY(-22px)
        options:{
          shorthand: "transform 0.3s"
        }
      }
      before:{
        position: absolute
        top: 100%
        left: 0
        width: 100%
        height: 100%
        background: darken(_flipBg, 60%)
        content: attr(data-hover)
        hover:{
          background: _flipBg
          options:{
            shorthand: "background 0.3s" 
          }
        }
        transform: rotateX(-90deg)
        transform-origin: "50% 0"
      }
    }
  }
})



