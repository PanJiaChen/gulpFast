//Settings/Plugins
ks-no-conflict = true
@import "kouto-swiss"
@import 'rupture';
@import 'lost';
//Lost Settings
$flexbox = true;
$gutter = 30px
$rtl = false
@import 'typographic';
//Resets
//Use corysimmons/boy reset
//to gell with lost and typographic
@import '_base/reset/reset.css'
ks-box-sizing-reset()
ks-normalize()
//Base
@import '_base/*'
//Mixins
@import '_base/mixins/*'
//Generated Icons
@import '_generated/*'

//Defualt bg
body
  background: $bg

//code styl
code
  padding: 0
  padding-top: 0.2em
  padding-bottom: 0.2em
  margin: 0
  font-size: 85%
  background-color: rgba(0,0,0,0.04)
  border-radius: 3px