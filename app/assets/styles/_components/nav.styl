$navBg = $pc
// edit()

.nav_Wrapper
  clearfix()
  nav
    //for nav intro
    transform: translateY(-100%)
    opacity: 0
    //styles
    transition: all 0.8s;
    position: fixed;
    top: 0;
    left: 0;
    right: 0px
    z-index: 1000;
    height: 250px;
    overflow: hidden;
    text-align:center;
    line-height: 220px;
    &:after, &:before
      transform: translateZ(0)
      transition: all 0.8s ease-in-out;
      background: none repeat scroll 0 0 alpha($navBg, 0.8);
      border-top: 13px solid alpha(darken($pc, 20%), 0.89)
      border-bottom: 13px solid alpha(darken($pc, 20%), 0.89)
      content: "";
      height: 150px;
      left: 0;
      position: fixed;
      top: 0;
      transform: skew(0deg, 8deg);
      width: 50%;
    &:after
      transform: translateZ(0)
      transition: all 0.8s ease-in-out;
      left: auto;
      right: 0px;
      transform: skew(0deg, -8deg);
      width: calc(50%);
    ul
      center(900px)
      align(center)
      margin-top: 10px
      list-style-type: none
    li
      column('1/5')
      text-align: center

// edit()
//Header Logo
.nav_Wrapper
  z-index: 2000
  .headerLogo
    transition: opacity 0.8s ease-in-out;
    opacity: 0
    height: 400px
    z-index: 2000
    position: fixed
    .headerLogoTitle
      position: absolute
      fill: alpha(#2980B9, 0.95)
    .headerLogoTag
      position: absolute
      fill: alpha($sc, 0.95)
.shrunk
  .headerLogo
    transition: opacity 0.8s ease-in-out;
    opacity: 1
