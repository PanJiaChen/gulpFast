//Link Styles
.nav_Wrapper
  nav
    a
      z-index: 1000
      color: $sc
      font-family: $title
      text-transform: uppercase;
      display: inline-block;
      position: relative;
      letter-spacing: 1px;
      text-shadow: 0 0 1px rgba(255,255,255,0.3);
      font-size: 30px;
      font-weight:normal;
      text-decoration: none
      transition: all 0.8s;
      &:before, &:after 
        position: absolute;
        transform: translateZ(0)
        top: 60%;
        left: -10%;
        width: 120%;
        height: 3px;
        background: $sc;
        content: '';
        transition: transform 0.3s;
        transform: scale(0.85);
      &:after
        opacity: 0;
        transition: top 0.3s, opacity 0.3s, transform 0.3s;
      &:hover:before, &:hover:after, &:focus:before, &:focus:after
        transform: scale(1);
      &:hover:after, &:focus:after
        top: 35%;
        opacity: 1;

//Shrunk
.shrunk
  nav
    transition: all 0.3s ease-in-out;
    line-height: 100px;
    &:after, &:before
      transform: translateZ(0)
      height: 100px
      background: none repeat scroll 0 0 alpha($ag[1], 0.85);
      transition: all 0.8s ease-in-out;
      transform: skew(0deg, 0deg);
    &:after
      transform: translateZ(0)
      height: 100px
      transition: all 0.8s ease-in-out;
      transform: skew(0deg, 0deg);
    ul
      margin-top: 5px
    a
      transition: all 0.8s;
      font-size: 25px
      &:before, &:after 
        background: $accent
        top: 60%;
        width: 120%;
      &:hover:after, &:focus:after
        top: 30%;

