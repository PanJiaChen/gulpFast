////////////////////////////////////////////////////////////////////////////////
//Projects
////////////////////////////////////////////////////////////////////////////////

// edit()

$boxColor = ks-quad($accent)
.project_Wrapper
  height: calc(100vh - 100px)
.myProjects
  center(1080px)
  align()
  height: 100%
  margin-top: -65px
  // margin-bottom: 100px
  //Boxes
  .projectBoxs
    clearfix()
    column('1/2')
    .box_Wrapper
      clearfix()
      flex-container()
      align(center)    
    //Box style
    //Hacky but time is a tickign
    .box
      column('1/2')
      align(center)
      float: left
      border: 5px solid $pc
      size: 200px
      transform: rotate(45deg)
      border-radius: 8px
      h3
        transform: rotate(-45deg)
        margin: 0
        font-family: $title
        color: darken($pc, 40%)
        transition: all 0.4s ease-in-out;
      &:hover
        h3
          color: $sc
          transition: all 0.4s ease-in-out;
      &:first-child
        background: alpha($accent, 0.3)
        z-index: 5
        &:hover
          background: alpha($accent, 0.8)
      &:nth-child(2)
        background: alpha($boxColor[0], 0.3)
        z-index: 4
        &:hover
          background: alpha($boxColor[0], 0.8)
      &:nth-child(3)
        background: alpha($boxColor[1], 0.3)
        z-index: 3
        &:hover
          background: alpha($boxColor[1], 0.8)
      &:nth-child(4)
        background: alpha($boxColor[2], 0.3) 
        z-index: 3
        &:hover
          background: alpha($boxColor[2], 0.8)
    //Box Hover
    .box
      cursor: pointer
      transition: all 0.4s ease-in-out;
    //Active State
    .active
      z-index: 10 !important
      h3
        color: $sc !important
  .projectDes
    column('1/2')
    margin-top: -100px
    h1
      divider('bottom', 2px)
      font-family: $title
    p
      font-family: $text
    a
      font-family: $text
      text-decoration: none
      color: #666
    .active
      display: block !important
    //Go FAst
    #goFast
      display: none
      h1
        color: alpha($accent, 0.8)
    #pageHappy
      display: none
      transform: translateX(200%)
      h1
        color: alpha($boxColor[0], 0.8)
    #materialBtn
      display: none
      transform: translateX(200%)
      h1
        color: alpha($boxColor[1], 0.8)
    #buttron
      display: none
      transform: translateX(200%)
      h1
        color: alpha($boxColor[2], 0.8)





////////////////////////////////////////////////////////////////////////////////
//Skills
////////////////////////////////////////////////////////////////////////////////


.skills_Wrapper
  height: calc(100vh - 100px)
  .mySkills
    center(1080px)
    margin-top: calc(10vh) 
    align(top-center)
  .frontList
    column('1/3')
    align()
  .backList
    column('1/3')
    align()
  .misList
    column('1/3')
    align()

.skills_Wrapper
  .listTitle
    color: $accent !important
    font-size: 1.5em !important

  ul.list,
  ul.list ul
    list-style-type: none;
    margin:0;
    padding:0;
      
  ul.list ul
    margin-left:10px; 
    position:relative;

  ul.list ul:before 
    content:"";
    display:block;
    width:0;
    position:absolute;
    top:0;
    bottom:0;
    left:0;
    border-left:1px solid #ccc;

  ul.list li
    margin:0;
    padding:3px 12px;
    text-decoration: none;
    text-transform: uppercase;
    font-size:13px;
    line-height:20px;
    color:$fc;
    font-weight:normal;
    position:relative;

  ul.list li a
    transition: all 0.2s ease-in-out;
    text-decoration: none;
    text-transform: uppercase;
    font-family: $text
    font-size:14px;
    line-height:20px;
    color:$fc;
    font-weight:bold;
    position:relative;

  ul.list li a:hover,
  ul.list li a:hover+ul li a
    transition: all 0.2s ease-in-out;
    color: $accent;
      
  ul.list ul li:before
    content:"";
    display:block;
    width:8px;
    height:0;
    border-top:1px solid $fc;
    position:absolute;
    top:10px;
    left: 0;
      
  ul.list ul li:last-child:before 
    background: white; 
    height: auto;
    top: 10px; 
    bottom: 0;
    



