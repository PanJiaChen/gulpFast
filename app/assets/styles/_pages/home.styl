//--------------------------//
//Hexagons
//-------------------------//
//Vars
$hexSize = 250px;
$hexBColor = $mc[0]
$hexBWidth = 10px
$hexShadow = 0 0 20px rgba(52,73,94,0.7)
//Mixin
hexIcon($class, $fontSize = 130px, $adjHight = 70px, $adjLeft = -15px)
  .home_Wrapper
    {$class}
      .icon_Container
        align()
        z-index: 2000
        size: 150px
        background: alpha(darken($gray, 80%), 0.4)
        position: absolute
        margin-left: -75px
        margin-top: 70px
        border-radius: 50%
        border: $hexBColor solid 5px
        .icon
          position: relative
          z-index: 3000
          color: $accent
          size: 100px
          font-size: $fontSize
          margin-top: $adjHight
          &:before
            margin-left: $adjLeft


//Make all hex bounce on focus
hoverBounce('.hex')
//entrepreneur hex
hexagon('.entHex', $hexSize, url("../images/entrepreneur.jpg"), $hexBColor, $hexBWidth, $hexShadow)
hexIcon('.entrepreneur', 120px, 63px, 10px)
//problem Hex
hexagon('.problemHex', $hexSize, url("../images/problem.jpg"), $hexBColor, $hexBWidth, $hexShadow)
hexIcon('.problem', 110px, 50px, 3px)
//Code Hex
hexagon('.codeHex', $hexSize, url("../images/code.jpg"), $hexBColor, $hexBWidth, $hexShadow)
hexIcon('.code')

