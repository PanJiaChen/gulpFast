_twoLinesStyle1 = {
  globalOptions:{
    delay: 0s
  }
  component:{
    a: {
      hover:{
        color: $bg
        options:{
          delay: 1s
        }
      }
      before:{
        transition:{
          options:{
            shorthand:{
              background: 0.5s ease-in 0s
              transform: 0.5s ease-in 0s
            }
          }
        }
        hover:{
          background: alpha($sc, 0.9)
          root: true
          transform: scale(1.2)
          options:{
            shorthand:{
              background: 0.5s ease-in 0.5s
              transform: 0.5s ease-in 0.5s
            }
          }
        }
      }
      after:{
        transform: scale(0.5)
        hover:{
          background: $pc
          height: 40px
          transform: "scale(1.2) translateY(30px)"
          options:{
            shorthand: {              
              height: 0.5s ease-in-out 0.5s
              bottom: 0.5s ease-in
              transform: 0.5s ease-in 0.5s
              opacity: 0.4s ease-in
              background: 0.4s ease-in
            }
          }
        }
      }
    }
  }
}


twoLines = createButtronClass('twoLines', {
  background: transparent
  height: 40px
  margin: 0
  padding: 0
  component:{
    a:{
      color: #666
      position: absolute
      top: 100%
      width: 100%
      top: 0
      left: 0
      before: {
        content: "''"
        position: absolute
        background: rgba(0, 0, 0, 0.2)
        height: 5px
        width: 60%
        left: 20%
        bottom: 0
        border-radius: 2px
        hover:{
          background: rgba(0, 0, 0, 0.3)
          root: true
          transform: scale(1.2)
        }
      }
      after:{
        content: "''"
        position: absolute
        background: rgba(0, 0, 0, 0.2)
        width: 60%
        left: 20%
        height: 5px
        bottom: 0
        border-radius: 2px
        z-index: -1
        opacity: 0
        hover:{
          root: true
          opacity: 1
          bottom: 35px
          background: rgba(0, 0, 0, 0.3)
          transform: scale(1.2)
        }
      }
    }
  }
})


