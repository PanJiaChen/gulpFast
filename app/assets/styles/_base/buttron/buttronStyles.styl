_bracketsFadeIn = {transform: 0.3s, opacity: 0.4s}
_bracketsFadeOut = {transform: 0.4s, opacity: 0.2s}

//daPolice
_bracketsStyle4 = {
  color: $sc
  font-size: 1.5em
  font-weight: bold
  hover: {
    anim:{
      name: daPolice
      count: infinite
      duration: 0.75s
      timeline:{
        "25%":{
          color: #ECF0F1
        }
        "75%":{
          color: #2C3E50
        }
      }
    }
  }
  component:{
    span:{
      before:{
        color: $sc
        top: -5px
        border-top: 4px solid transparent
        border-bottom: 5px solid $sc
        hover:{
          anim:{
            name: daPoliceSides
            count: infinite
            duration: 0.75s
            delay: 0.25s
            timeline:{
              "25%":{
                color: #ECF0F1
                top: -5px
              }
              "40%":{
                top: -14px
                border-color: #2C3E50
              }
              "75%":{
                color: #2C3E50
                top: -5px

              }
            }
          }
        }
      }
      after: {
        color: $sc
        top: -5px
        border-top: 4px solid transparent
        border-bottom: 5px solid $sc
        hover:{
          anim:{
            override: true
            name: daPoliceSides
            count: infinite
            duration: 0.75s
            delay: 0.25s
          }
        }
      }
    }
  }
}

brackets = createButtronClass('brackets',{
  text-decoration: none
  text-transform: uppercase
  letter-spacing: 1px
  font-weight: 400
  text-shadow: "0 0 1px rgba(255,255,255,0.3)"
  font-size: 1.35em
  background: transparent
  color: #7F8C8D
  component:{
    span:{
      //Pseudo Elms
      before:{
        content: "'['"
        position: absolute
        left: 10%
        top: -3px
        opacity: 0
        margin-right: 10px
        font-size: 1.4em
        transition: {
          options:{
            shorthand: _bracketsFadeOut
          }
        }
        hover:{
          transform: translateX(-20px)
          opacity: 1
          options:{
            shorthand: _bracketsFadeIn
          }
        }
      }
      after:{
        content: "']'"
        position: absolute
        right: 10%
        top: -3px
        opacity: 0
        margin-left: 10px
        font-size: 1.4em
        transition: {
          options:{
            shorthand: _bracketsFadeOut
          }
        }
        hover:{
          transform: translateX(20px)
          opacity: 1
          options:{
            shorthand: _bracketsFadeIn
          }
        }
      }
    }
  }
})





