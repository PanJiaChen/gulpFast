{
  "root": {
    "src": "./src",
    "dest": "./dist",
    "destAssets": "./dist/assets",
    "destTemp": "./dist/.temp"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "dist"
      },
      "files": ["dist/**/*.html"]
    },

    "js": {
      "src": "assets/js",
      "dest": "assets/js",
      "extractSharedJs": true,
      "entries": {
        "app": ["./app.js"]
      },
      "externals": {
        "jquery": "jQuery"
      },
      "extensions": ["", ".jsx", ".js"],
      "loaders": []
    },

    "css": {
      "src": "assets/styles",
      "post": "assets/styles",
      "dest": "assets/styles",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "stylus": {
        "plugins": ["ctr", "kouto-swiss", "rupture", "lost-grid", "typographic"]
      },
      "postCss": {
        "plugins": [
          "cssnext",
          "postcss-default-unit",
          "postcss-focus",
          "postcss-easings",
          "postcss-size"
        ]
      },
      "filterPartials": true,
      "extensions": ["styl", "css"]
    },

    "html": {
      "src": "views",
      "dest": "./",
      "dataFile": "data/global.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json", "nunjs"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },

    "images": {
      "src": "assets/images",
      "dest": "assets/images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "assets/fonts",
      "dest": "assets/fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
      "src": "assets/icons",
      "dest": "assets/fonts",
      "stylusDest": "_generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "assets/sprites",
      "dest": "assets/images",
      "extensions": ["svg"]
    },

    "rootAssets": {
      "src": "assets/_root",
      "dest": "./"
    }
  }
}
